
@{
    ViewBag.Title = "GetWriterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Yazar Listesi</h2>
<table class="table table-hover">
    <tr>
        <td>Yazar ID</td>
        <td>Yazar Adı</td>
        <td>Yazar Soyadı</td>
        <td>Yazarın Maili</td>
        <td>Yazarın Şifresi</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.WriterID</td>
            <td>@item.WriterName</td>
            <td>@item.WriterSurname</td>
            <td>@item.WriterEmail</td>
            <td>@item.WriterPassword</td>



        </tr>
}
</table>

<a href="/Writer/AddWriter">Yeni Kategori</a>


